(include ../../../dune.flags.inc)

(executable
 (package cli)
 (name mina)
 (public_name mina)
 (modules mina)
 (modes native)
 (flags
  (:standard -warn-error +a))
 (libraries mina_cli_entrypoint disk_cache.lmdb)
 (instrumentation
  (backend bisect_ppx))
 (preprocess
  (pps ppx_version)))

