(jbuild_version 1)

(library
 ((name vrf_lib)
  (public_name vrf_lib)
  (flags (:standard -short-paths))
  (library_flags (-linkall))
  (libraries (core snarky snarky_curves test_util))
  (preprocess (pps (ppx_jane ppx_deriving.eq)))
  (modules (integrated standalone))
  (synopsis "VRF instantiation")))

(library
 ((name tests)
  (inline_tests)
  (libraries
    ( core
      snarky
      snarky_curves
      test_util
      signature_lib
      snark_params
      vrf_lib
      coda_base
      random_oracle
      fold_lib))
  (preprocess (pps (ppx_jane ppx_deriving.eq bisect_ppx -conditional)))
  (modules (integrated_test))))
