(data_only_dirs src)
(dirs :standard \ target) ;; Ignore target if it exists locally

(rule
 (targets libmarlin_plonk_stubs.a dllmarlin_plonk_stubs.so)
 (deps
   Cargo.toml
   rust-toolchain.toml
   build.sh
   (source_tree src)
   (source_tree ../../marlin))
 (action
  (progn
    (run ./build.sh))))

(library
 (public_name marlin_plonk_bindings.stubs)
 (name marlin_plonk_bindings_stubs)
 (foreign_archives marlin_plonk_stubs)
 (c_library_flags :standard "-lpthread")
 (instrumentation (backend bisect_ppx))
 (inline_tests)
 (preprocess (pps ppx_version ppx_inline_test)))
