(library
 (name interruptible)
 (public_name interruptible)
 (library_flags -linkall)
 (inline_tests (flags -verbose -show-counts))
 (libraries
   ;; opam libraries
   core_kernel
   async_kernel
   ppx_inline_test.config
   ;; local libraries
   run_in_thread
   )
