(data_only_dirs src)

(dirs :standard \ target)

;; Ignore target if it exists locally

(rule
 (targets libwires_15_stubs.a target)
 (deps
  Cargo.toml
  rust-toolchain.toml
  (source_tree src))
 (action
  (progn
   (run rm -rf ./target)
   (run rm -f ./Cargo.lock)
   (setenv
    RUSTFLAGS
    "-C target-feature=+bmi2,+adx"
    (run cargo build --release))
   (run cp target/release/libwires_15_stubs.a .))))

;; library

(library
 (public_name kimchi)
 (name kimchi)
 (foreign_archives wires_15_stubs)
 (c_library_flags :standard "-lpthread")
 (instrumentation
  (backend bisect_ppx))
 (inline_tests)
 (preprocess
  (pps ppx_version ppx_inline_test)))

;; generate the OCaml bindings

(rule
 (target kimchi.ml)
 (deps
  Cargo.toml
  rust-toolchain.toml
  (source_tree src)
  (source_tree binding_generation))
 (action
  (chdir
   binding_generation
   (progn
    (run rm -rf ./target)
    (run rm -f ./Cargo.lock)
    (run cargo run ../kimchi.ml)))))
