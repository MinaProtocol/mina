(library
 (name work_partitioner)
 (public_name work_partitioner)
 (library_flags -linkall)
 (inline_tests
  (flags -verbose -show-counts))
 (libraries 
   ; OPAM libraries
   core_kernel 
   ; local libraries
   snark_work_lib
   ledger_proof
   signature_lib
   currency
   work_selector
   network_pool)
   
 (preprocess
  (pps
   ppx_let
   ppx_custom_printf
   ppx_version
   ppx_sexp_conv
   ppx_deriving_yojson))
   
 (instrumentation
  (backend bisect_ppx))
 (synopsis "Partition work returned by Work_selector and issue them to real Snark Worker"))
