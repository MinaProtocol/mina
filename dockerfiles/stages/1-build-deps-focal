FROM build-deps AS build-deps-focal

ENV DEBIAN_FRONTEND=noninteractive

USER root

RUN apt-get update --quiet \
  && apt-get upgrade --quiet --yes \
  && apt-get install --no-install-recommends --quiet --yes \
    libssl-dev \
    libprocps-dev \
    '(^lld-10$|^lld-11$)' \
  && rm -rf /var/lib/apt/lists/*

USER opam
